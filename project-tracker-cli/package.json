{
  "name": "project-tracker-cli",
  "version": "1.0.0",
  "description": "A CLI tool for tracking project progress through GitHub/GitLab APIs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage test-results",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "cli",
    "project-management",
    "github",
    "progress-tracking"
  ],
  "author": "AI Virtual Corporation",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-virtual-corp/project-tracker-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ai-virtual-corp/project-tracker-cli/issues"
  },
  "homepage": "https://github.com/ai-virtual-corp/project-tracker-cli#readme"
}