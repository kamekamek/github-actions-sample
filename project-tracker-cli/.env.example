# ================================
# PROJECT TRACKER CLI - Environment Variables
# セキュリティファーストな環境変数設定テンプレート
# ================================

# ================================
# 🔐 認証設定 (必須)
# ================================

# GitHub Personal Access Token (必須)
# トークンは以下の権限が必要です:
# - repo (リポジトリアクセス)
# - read:user (ユーザー情報読み取り)
# - read:org (組織情報読み取り - 必要に応じて)
GITHUB_TOKEN=your_github_token_here

# GitHub Enterprise Server使用時のベースURL (オプション)
# デフォルト: https://api.github.com
# GITHUB_BASE_URL=https://your-github-enterprise.com/api/v3

# ================================
# 📊 プロジェクト設定
# ================================

# デフォルトリポジトリ所有者 (オプション)
# CLIコマンドでリポジトリを指定しない場合に使用
GITHUB_OWNER=your-username-or-org

# デフォルトリポジトリ名 (オプション)
# CLIコマンドでリポジトリを指定しない場合に使用
GITHUB_REPO=your-repository-name

# ================================
# ⚙️ API設定
# ================================

# APIタイムアウト設定 (ミリ秒)
# デフォルト: 10000 (10秒)
# 推奨範囲: 5000-30000
GITHUB_TIMEOUT_MS=10000

# APIリトライ回数
# デフォルト: 3
# 推奨範囲: 1-5
GITHUB_RETRY_ATTEMPTS=3

# レート制限バッファー
# この値を下回ったときに待機を開始
# デフォルト: 10
# 推奨範囲: 5-50
GITHUB_RATE_LIMIT_BUFFER=10

# ================================
# 📈 分析設定
# ================================

# 分析対象期間 (日数)
# デフォルト: 30
# 推奨範囲: 7-365
ANALYSIS_TIME_RANGE_DAYS=30

# 週末を分析に含める
# デフォルト: true
# 値: true/false
ANALYSIS_INCLUDE_WEEKENDS=true

# マージコミットを除外する
# デフォルト: true
# 値: true/false
ANALYSIS_EXCLUDE_MERGE_COMMITS=true

# 最小コミットメッセージ長
# これより短いコミットメッセージは品質が低いとみなされる
# デフォルト: 10
# 推奨範囲: 5-50
ANALYSIS_MIN_COMMIT_MESSAGE_LENGTH=10

# ================================
# 🏥 ヘルススコア重み設定
# ================================
# 各指標の重み (合計1.0になるように設定)

# アクティビティ重み
# コミット頻度、プルリクエスト活動など
# デフォルト: 0.3
HEALTH_WEIGHT_ACTIVITY=0.3

# コード品質重み
# コードレビュー、テストカバレッジなど
# デフォルト: 0.25
HEALTH_WEIGHT_CODE_QUALITY=0.25

# コラボレーション重み
# チーム連携、ディスカッション活動など
# デフォルト: 0.25
HEALTH_WEIGHT_COLLABORATION=0.25

# イシュー管理重み
# イシューの解決速度、対応品質など
# デフォルト: 0.2
HEALTH_WEIGHT_ISSUE_MANAGEMENT=0.2

# ================================
# 🛡️ セキュリティ設定
# ================================

# HTTPS接続の強制
# デフォルト: true (本番環境では必須)
# 値: true/false
SECURITY_REQUIRE_HTTPS=true

# トークン検証の有効化
# デフォルト: true (セキュリティのため推奨)
# 値: true/false
SECURITY_VALIDATE_TOKEN_FORMAT=true

# セキュリティイベントログの有効化
# デフォルト: true
# 値: true/false
SECURITY_LOG_EVENTS=true

# トークン暗号化の有効化
# ローカルストレージ使用時の暗号化
# デフォルト: true
# 値: true/false
SECURITY_ENCRYPT_TOKENS=true

# トークンの最大有効期間 (秒)
# デフォルト: 2592000 (30日)
# 推奨範囲: 86400-7776000 (1日-90日)
SECURITY_TOKEN_MAX_AGE=2592000

# ================================
# 🐛 デバッグ・開発設定
# ================================

# デバッグモード
# 詳細なログ出力を有効化
# デフォルト: false
# 値: true/false
DEBUG_MODE=false

# ログレベル
# デフォルト: info
# 値: error/warn/info/debug
LOG_LEVEL=info

# APIレスポンスの詳細ログ
# デフォルト: false
# 値: true/false
LOG_API_RESPONSES=false

# ================================
# 💾 キャッシュ設定 (オプション)
# ================================

# キャッシュ有効化
# パフォーマンス向上のためのキャッシュ機能
# デフォルト: true
# 値: true/false
CACHE_ENABLED=true

# キャッシュTTL (秒)
# デフォルト: 300 (5分)
# 推奨範囲: 60-3600 (1分-1時間)
CACHE_TTL_SECONDS=300

# キャッシュディレクトリ
# デフォルト: ~/.project-tracker/cache
# CACHE_DIRECTORY=~/.project-tracker/cache

# ================================
# 📤 出力設定
# ================================

# デフォルト出力形式
# デフォルト: table
# 値: table/json/markdown
DEFAULT_OUTPUT_FORMAT=table

# 出力ファイルのデフォルトディレクトリ
# デフォルト: ./reports
# OUTPUT_DIRECTORY=./reports

# JSONファイルの整形
# デフォルト: true
# 値: true/false
JSON_PRETTY_PRINT=true

# ================================
# 🌐 プロキシ設定 (企業環境用)
# ================================

# HTTPプロキシ
# HTTP_PROXY=http://proxy.company.com:8080

# HTTPSプロキシ
# HTTPS_PROXY=https://proxy.company.com:8080

# プロキシ除外リスト
# NO_PROXY=localhost,127.0.0.1,.local

# ================================
# 📧 通知設定 (将来の機能用)
# ================================

# Slack Webhook URL (将来の機能)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord Webhook URL (将来の機能)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ================================
# 使用例とベストプラクティス
# ================================

# 1. 基本的な使用方法:
#    GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
#    GITHUB_OWNER=myusername
#    GITHUB_REPO=myproject

# 2. 企業環境での使用:
#    GITHUB_BASE_URL=https://github.company.com/api/v3
#    GITHUB_TOKEN=your_enterprise_token
#    HTTP_PROXY=http://proxy.company.com:8080

# 3. 高頻度使用時の設定:
#    GITHUB_RATE_LIMIT_BUFFER=20
#    CACHE_ENABLED=true
#    CACHE_TTL_SECONDS=600

# 4. セキュリティ重視の設定:
#    SECURITY_REQUIRE_HTTPS=true
#    SECURITY_VALIDATE_TOKEN_FORMAT=true
#    SECURITY_ENCRYPT_TOKENS=true
#    DEBUG_MODE=false

# ================================
# ⚠️ セキュリティ警告
# ================================

# 1. GITHUB_TOKENは絶対に公開しないでください
# 2. .envファイルを.gitignoreに追加してください
# 3. 本番環境では環境変数を直接設定することを推奨
# 4. トークンは定期的に更新してください
# 5. 不要になったトークンはGitHubで無効化してください

